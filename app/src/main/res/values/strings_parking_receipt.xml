    <!-- Label shown before the email address. -->
    <string name="receipt_sent_to">The receipt is sent to:</string>
    <!-- message shown when user do not have defined email address. -->
    <string name="receipt_no_email">Email address is missing</string>
    <!-- Price per PDF receipt sending. -->
    <string name="receipt_price_per_receipt_pdf">Price: %1$02.2f %2$s / PDF-receipt</string>
    <!-- Price per PDF receipt sending. -->
    <string name="receipt_price_per_confirm_pdf">Price: %1$02.2f %2$s / PDF-confirmation</string>
    <!-- Button, order email receipt -->
    <string name="receipt_order_email_receipt">Order e-mail receipt (PDF)</string>
    <!-- Button, edit email address -->
    <string name="receipt_edit_email">Edit e-mail address</string>
    <!-- Button, cancel dialog. -->
    <string name="receipt_cancel">Cancel</string>
    <!-- Confirmation message, shown when ordered PDF confirmation. -->
    <string name="receipt_order_applied">E-mail receipt requested.</string>
